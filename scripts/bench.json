{
  "repeat": 5,
  "reference": "dask",
  "configurations": {
    "$product": {
      "cluster": {"$ref": "clusters"},
      "usecase": {"$ref": "usecases"}
    }
  },
  "clusters": {
    "$product": {
      "scheduler": [
        {"$ref": "dask"},
        {"$ref": "dask-random"},
        {"$ref": "dask-blevel"},
        {"$ref": "dask-tlevel"},
        {"$ref": "rsds-ws"},
        {"$ref": "rsds-random"},
        {"$ref": "rsds-blevel"},
        {"$ref": "rsds-tlevel"}
      ],
      "workers": {
        "$+": [
          {"$product": {
            "nodes": [1, 7],
            "threads": [1],
            "processes": [24],
            "args": [["--memory-limit", "10GB"]]
          }},
          {"$product": {
              "nodes": [1, 7],
              "threads": [1],
              "processes": [24],
              "binary": ["$BUILD/target/release/rsds-worker"],
              "spawn-all": [true]
          }}]
      }
    }
  },
  "rsds-ws": {
    "name": "rsds-ws",
    "binary": "$BUILD/target/release/rsds-scheduler",
    "args": ["--scheduler", "workstealing"]
  },
  "rsds-random": {
    "name": "rsds-random",
    "binary": "$BUILD/target/release/rsds-scheduler",
    "args": ["--scheduler", "random"]
  },
  "rsds-blevel": {
    "name": "rsds-blevel",
    "binary": "$BUILD/target/release/rsds-scheduler",
    "args": ["--scheduler", "blevel"]
  },
  "rsds-tlevel": {
    "name": "rsds-tlevel",
    "binary": "$BUILD/target/release/rsds-scheduler",
    "args": ["--scheduler", "tlevel"]
  },
  "dask": {
    "name": "dask",
    "binary": "dask-scheduler",
    "args": ["--no-dashboard"]
  },
  "dask-blevel": {
    "name": "dask-blevel",
    "binary": "dask-scheduler",
    "args": ["--no-dashboard"],
    "env": {
      "DASK_SCHEDULER": "blevel"
    }
  },
  "dask-tlevel": {
    "name": "dask-tlevel",
    "binary": "dask-scheduler",
    "args": ["--no-dashboard"],
    "env": {
      "DASK_SCHEDULER": "tlevel"
    }
  },
  "dask-random": {
    "name": "dask-random",
    "binary": "dask-scheduler",
    "args": ["--no-dashboard"],
    "env": {
      "DASK_SCHEDULER": "random"
    }
  },
  "dask-ucx": {
    "name": "dask-ucx",
    "binary": "dask-scheduler",
    "args": ["--no-dashboard", "--protocol", "ucx"],
    "protocol": "ucx",
    "modules": ["hwloc/2.0.3-GCC-6.3.0-2.27", "numactl/2.0.12-GCC-6.3.0-2.27"]
  },
  "usecases": {"$+": [
    {"$ref": "xarray"},
    {"$ref": "pandas_join"},
    {"$ref": "pandas_groupby"},
    {"$ref": "bag"},
    {"$ref": "tree"},
    {"$ref": "numpy"},
    {"$ref": "merge"},
    {"$ref": "merge_slow"},
    {"$ref": "wordbatch_vectorizer"},
    {"$ref": "wordbatch_wordbag"}
  ]},
  "pandas_join": {
    "$product": {
      "function": ["pandas_join"],
      "args": [[1, "1s", "1T"], [1, "1s", "1H"], [1, "2s", "1H"]]
    }
  },
  "pandas_groupby": {
    "$product": {
      "function": ["pandas_groupby"],
      "args": [[90, "1s", "1H"], [90, "1s", "8H"], [360, "1s", "1H"], [360, "1s", "8H"]]
    }
  },
  "xarray": {
    "$product": {
      "function": ["xarray"],
      "args": [5, 25]
    }
  },
  "bag": {
    "$product": {
      "function": ["bag"],
      "args": [[10, 10000], [20, 10000], [40, 10000]]
    }
  },
  "tree": {
    "$product": {
      "function": ["tree"],
      "args": [15]
    }
  },
  "numpy": {
    "$product": {
      "function": ["numpy"],
      "args": [[20000, 10], [20000, 20], [20000, 40]]
    }
  },
  "merge": {
    "$product": {
      "function": ["merge"],
      "args": [10000, 15000, 25000, 50000]
    }
  },
  "merge_slow": {
    "$product": {
      "function": ["merge_slow"],
      "args": [[5000, 0.1]]
    }
  },
  "wordbatch_vectorizer": {
    "$product": {
      "function": ["wordbatch_vectorizer"],
      "args": [
        ["/scratch/work/project/dd-19-39/wordbatch/wordbatch.csv", 100000],
        ["/scratch/work/project/dd-19-39/wordbatch/wordbatch.csv", null]
      ],
      "needs_client": [true]
    }
  },
  "wordbatch_wordbag": {
    "$product": {
      "function": ["wordbatch_wordbag"],
      "args": [
        ["/scratch/work/project/dd-19-39/wordbatch/wordbatch.csv", 100000]
      ],
      "needs_client": [true]
    }
  }
}
